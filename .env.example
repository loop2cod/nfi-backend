# Application Settings
APP_NAME=NFI Platform API
APP_VERSION=1.0.0
DEBUG=True

# Security - IMPORTANT: Change these in production!
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-characters-long
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database Configuration
# For local development with SQLite (default)
DATABASE_TYPE=sqlite
DATABASE_URL=nfi_platform.db

# For Cloudflare D1 (production)
# DATABASE_TYPE=d1
# D1_ACCOUNT_ID=your-cloudflare-account-id
# D1_DATABASE_ID=your-d1-database-id
# D1_API_TOKEN=your-cloudflare-api-token

# CORS Settings
# CORS_ORIGINS=["http://localhost:3000","https://yourdomain.com"]

# KYC Providers
SUMSUB_API_KEY=your_sumsub_api_key
SUMSUB_SECRET_KEY=your_sumsub_secret_key
ONFIDO_API_TOKEN=your_onfido_api_token
