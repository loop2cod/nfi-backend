# NFI Platform Environment Variables
# Copy this file to .env and fill in your actual credentials

# ============================================================================
# Google OAuth Configuration
# ============================================================================
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ============================================================================
# Sumsub KYC Configuration
# ============================================================================
SUMSUB_APP_TOKEN=sbx:your-sumsub-app-token
SUMSUB_SECRET_KEY=your-sumsub-secret-key

# ============================================================================
# DFNS Wallet Configuration - See DFNS_SETUP_GUIDE.md
# ============================================================================
DFNS_BASE_URL=https://api.dfns.io
DFNS_ORG_ID=or-xxxxx-xxxxx-xxxxx
DFNS_CRED_ID=km-xxxxx-xxxxx
DFNS_AUTH_TOKEN=your-service-account-token
DFNS_USER_ID=us-xxxxx-xxxxx-xxxxx
DFNS_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----
your-private-key-content-here
-----END RSA PRIVATE KEY-----"

# ============================================================================
# BVNK Payment Service Configuration
# ============================================================================
BVNK_BASE_URL=https://api.sandbox.bvnk.com
BVNK_HAWK_AUTH_ID=your-hawk-auth-id
BVNK_SECRET_KEY=your-hawk-secret-key
